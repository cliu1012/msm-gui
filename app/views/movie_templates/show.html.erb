<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<div>
  <a href="/movies">
    Go back
  </a>
</div>

<div> <!-- delete the movie -->
  <a href="/delete_movie/<%= @the_movie.id %>">
    Delete movie
  </a>
</div>

<hr>
<!-- update movie -->
<form action="/update_movie/<%= @the_movie.id %>" method="post">

  <div> <!-- movie title -->
    <label for="title">Title</label>
    <input id="title" name="movie_title" type="text" value="<%= @the_movie.title %>">
  </div>

  <div> <!--movie year-->
    <label for="year">Year</label>
    <input id="year" name="movie_year" type="text" value="<%= @the_movie.year %>">
  </div>

  <div> <!--movie duration-->
    <label for="duration">Duration</label>
    <input id="duration" name="movie_duration" type="text" value="<%= @the_movie.duration %>">
  </div>

  <div> <!--movie description-->
    <label for="description">Description</label>
    <textarea id="description" name="movie_desc" rows="3"><%= @the_movie.title %></textarea>
  <div>

  <div> <!--movie image url-->
    <label for="image_url">Image</label>
    <input id="image_url" name="movie_image_url" type="text" value="<%= @the_movie.image %>">
  </div>

  <div> <!--movie director id-->
    <label for="director_id">Director ID</label>
    <input id="director_id" name="movie_director_id" type="text" value="<%= @the_movie.director_id %>">
  </div>

  <button>Update movie</button>

</form>

<hr>
<!-- movie information -->

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <%= the_director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
